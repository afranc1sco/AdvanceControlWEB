$("#myupdateproducto_<%= @producto.id %>").modal('hide');

$("#producto_<%= @producto.id %>").fadeOut(500, function(){
  $(this).remove();
  $(".child").remove();
  $("#container_productos").prepend('<%= j render @producto %>');

});
$("#notice").html("<%= escape_javascript(render :partial => 'partials/flash' , :locals => { :flash => flash }).html_safe %>");

setTimeout(function(){
  $('#notice').fadeIn("slow", function() {
    $(this).create();
  })
}, 1500);
