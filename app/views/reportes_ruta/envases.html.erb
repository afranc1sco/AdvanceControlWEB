<h2>Reporte de envases</h2>
<div class="well center-block">
  <h2>Ruta y dia operativo</h2>

    <%= form_tag("/busqueda_envases", method: 'get', remote: true, id:"search",class: "form-horizontal" ) do %>
      <div class="form-group">
        <%= label_tag :Ruta, "Selecciona Ruta:", class: "control-label col-md-2" %>
        <div class="col-md-2">
      <%= select_tag :search, options_for_select(@rutas.map{|e|[e.Ruta, e.IdRutas]}), :'data-remote' => 'true', :'data-url' => url_for(:controller => 'reportes_ruta', :action => 'update_dia', format: 'js') %>
        </div>
       </div>
       <%= hidden_field_tag :search6, params[:search6], value:"#{current_usuario.empresa_id}", class:"form-control datepicker"%>

       <div id="dia"><%= render 'dia' %></div>


       <div class="form-group">
        <div class="col-md-2">
          <%= submit_tag "Buscar", class: "btn btn-primary btn-lg btn-block", data: { disable_with: 'Buscando' } %>
        </div>
       </div>

    <%end%>

</div>
<div id="envases"><%= render 'envases' %></div>
