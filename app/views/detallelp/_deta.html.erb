<tr id="deta_<%= deta.id %>">
  <td><%= deta.Articulo %>

    <!--Modal - update deta-->
<%= form_for(deta, :method => :put, remote: true, html: {class: "form-horizontal formulario-validado-update#{deta.id}"}) do |f| %><!--ajax-->
  <div nohidden class="modal fade si" id="myupdatedeta_<%= deta.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Editando precios al producto</h4>
        </div>

        <div class="modal-body">
          <h4 class="text-center">Datos del Producto</h4><br>

            <div class="form-group">
              <p class="control-label col-md-3">Producto Clave:</p>
              <div class="control-label col-md-1" style="font-weight: bold">
                <%= deta.Articulo %>
              </div>
              <p class="control-label col-md-4">Nombre del Producto:</p>
              <div class="control-label col-md-4" style="font-weight: bold">
                <%= deta.productos.Producto %>
              </div>
            </div>
            <%if @list.Tipo == TRUE %>
              <div class="well center-block">
                <div class="form-group">
                  <%= f.label :PrecioMin, "Precio:", class:"control-label col-md-4" %>

                  <div class="col-md-5">
                    <div class="input-group">
                      <%= f.number_field :PrecioMin, class:"form-control",autofocus: true, minlength: "1", required: "true" %>
                    </div>
                  </div>
                </div>
              </div>
            <%else%>
              <div class="well center-block">
                <div class="form-group">
                  <%= f.label :PrecioMin, "Precio Minimo:", class:"control-label col-md-4" %>

                  <div class="col-md-5">
                    <div class="input-group">
                      <%= f.number_field :PrecioMin, class:"form-control",autofocus: true, minlength: "1", required: "true" %>
                    </div>
                  </div>
                </div>

                  <div class="form-group">
                    <%= f.label :PrecioMax, "Precio Maximo:", class:"control-label col-md-4" %>

                    <div class="col-md-5">
                      <div class="input-group">
                        <%= f.number_field :PrecioMax, class:"form-control",minlength: "1", required: "true" %>
                      </div>
                    </div>
                  </div>
              </div>
            <%end%>


        </div>

        <div class="modal-footer">
          <button type="button" id="myupdatebutton_<%= deta.id %>" class="btn btn-default" data-dismiss="modal">Cerrar</button>
          <%= submit_tag "Actualizar", class: "btn btn-primary", data: { disable_with: 'Actualizando' }%>
        </div>
      </div>
    </div>
  </div>
<%end%>


<script>
  $(".formulario-validado-update<%=deta.id%>").validate();

</script>
</td>
  <td><%= deta.productos.Producto %></td>
  <td><%= deta.PrecioMin %></td>
  <td><%= deta.PrecioMax %></td>
  <td><%= deta.productos.CodBarras %></td>

    <td>

        <button type="button" class="btn btn-warning btn-xs" data-toggle="modal" data-target="#myupdatedeta_<%= deta.id %>">
          Editar
        </button>

        <!--Destroy-->
        <%= link_to 'Eliminar', deta, method: :delete, class: "btn btn-danger btn-xs", remote:true %>

      </td>


<td class="no" >

</td>


</tr>
