
if (<%= @reldayc[@dia] %> > 0) {

  $("#global_<%= @reldayc.id %>").fadeOut(500, function(){
    $(this).remove();
    $(".child").remove();
    $("#container_reldaycli").prepend('<%= j render @reldayc %>');



  });

  $("#reldayc_<%= @reldayc.id %>").fadeOut(500, function(){
    $(this).remove();
    $(".child").remove();
    $("#container_reldaycli").prepend('<%= j render @reldayc %>');
  });



} else if (<%= @reldayc[@dia] %> == 0) {

  $("#reldayc_<%= @reldayc.id %>").fadeOut(500, function(){
    $(this).remove();
    $(".child").remove();
    $("#container_clientes").prepend('<%= j render @reldayc %>');

  });
  $("#notice").html("<%= escape_javascript(render :partial => 'partials/flash' , :locals => { :flash => flash }).html_safe %>");

}






setTimeout(function(){
  $('#notice').fadeIn("slow", function() {
    $(this).create();
  })
}, 1500);
