$("#myupdateproducto_<%= @producto.id %>").modal('hide');
$("#mynewproductoenvase").modal('show');

$("#producto_<%= @producto.id %>").fadeOut(500, function(){
  $(this).remove();
  $(".child").remove();
  $("#container_productos").prepend('<%= j render @producto %>');

});
