$("#myupdateusuario_<%= @usuario.id %>").modal('hide');

$("#usuario_<%= @usuario.id %>").fadeOut(500, function(){
  $(this).remove();
  $(".child").remove();
  $("#container_usuarios").prepend('<%= j render @usuario %>');

});

