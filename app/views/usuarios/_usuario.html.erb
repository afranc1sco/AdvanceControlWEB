<tr id="usuario_<%= usuario.id %>">
  <td><%=usuario.IdUsuario%>
        <!--Modal - update usuario-->
    <%= form_for(usuario, :method => :put, remote: true, html: {class: "form-horizontal formulario-validado-update#{usuario.id}"}) do |f| %><!--ajax-->
      <div nohidden class="modal fade si" id="myupdateusuario_<%= usuario.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Editar usuario</h4>
            </div>
            <div class="modal-body">

              <div class="form-group">
                <%= f.label :Nombre, "Nombre:", class: "control-label col-md-2" %>
                  <div class="col-md-7">
                    <%= f.text_field :Nombre, class: "form-control ", minlength: "7", required: "true"  %>
                </div>

              </div>
              <div class="well center-block">
                <div class="form-group">
                  <h3 class="col-md-5">Datos de Sesi√≥n:</h3>
                </div>
                <div class="form-group">
                  <%= f.label :email, "Email:", class: "control-label col-md-2" %>
                <div class="col-md-7">
                  <%= f.email_field :email, class: "form-control", minlength: "7", required: "true" %>
                </div>


              </div>
              <div class="form-group">
                  <%= f.label :empresamadre_id, "Empresa:", class: "control-label col-md-2" %>
                <div class="col-md-3">
                  <%= f.select :empresamadre_id, options_for_select(Empresamadre.all.map{|e|[e.Empresa, e.id]},selected: usuario.empresamadre_id), class: "form-control" %>
                </div>
              </div>

              </div>
            </div>
            <div class="modal-footer">
              <button type="button" id="myupdatebutton_<%= usuario.id %>" class="btn btn-default" data-dismiss="modal">Cerrar</button>
              <%= submit_tag "Actualizar", class: "btn btn-primary", data: { disable_with: 'Actualizando' }%>
            </div>
          </div>
        </div>
      </div>
    <%end%>
    <script>
      $(".formulario-validado-update<%=usuario.id%>").validate();

    </script>
</td>
  <td><%=usuario.usuario%></td>
  <td><%=usuario.email%></td>
  <td><%=usuario.Nombre%></td>
  <td>perfil</td>





    <td>

        <button type="button" class="btn btn-warning btn-xs" data-toggle="modal" data-target="#myupdateusuario_<%= usuario.id %>">
          Editar
        </button>
        <!--Destroy-->
        <%= link_to 'Eliminar', usuario, method: :delete, class: "btn btn-danger btn-xs", remote:true %>
      </td>


<td class="no" >
  </td>
</tr>
