<%= form_for(@usuario, :method => :put, html: {class: "form-horizontal "}) do |f| %><!--ajax-->

          <div class="form-group">

          <h1> Empresa
            <%= @empresa.Empresa %></h1>

          </div>

          <div class="form-group">
          <h2>Bienvenido <%= @usuario.Nombre %> </h2>
          </div>


          <div class="well center-block">
            <h3>por favor seleccione una sucursal a la que afiliarse</h3>

            <div class="form-group">
                <%= f.label :empresa_id, "Sucursal", class: "control-label col-md-3" %>
              <div class="col-md-3">
                <%= f.select :empresa_id, options_for_select(@sucursales.map{|e|[[e.IdEmpresa, e.Sucursal], e.IdEmpresa]})   %>
                <%= submit_tag "Aceptar", class: "btn btn-primary", data: { disable_with: 'Actualizando' }%>

              </div>
            </div>

          </div>


          </div>
        </div>

<%end%>
